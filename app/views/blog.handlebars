<div class="row">
  <div class="large-12 columns">
    <br />
    <br />
    <br />
      <ul class="filter centerize">
        <li><a href="/blog/">TODOS</a></li>
        <li><a href="/blog/?filter=tips">TIPS</a></li>
        <li><a href="/blog/?filter=viajes">VIAJES</a></li>
        <li><a href="/blog/?filter=datos">DATOS</a></li>
      </ul>
      <br />
      <ul class="no-bullet posts">
      {{#each articles}}
      <li class="all">
        <div class="index-cover">
          {{#if this.cover}}
            <a href="/article/{{this.id}}">
              <img src="http://res.cloudinary.com/fabianrios/image/upload/c_fill,h_175,w_300/v{{this.version}}/{{this.cover}}" alt="" />
            </a>
          {{else}}
            <a href="/article/{{this.id}}"><img src="http://placehold.it/300x176/2C00BA" alt="" /></a>
          {{/if}}
          <div class="gradient">
            <h4 class="title"><a class="whitetxt" href="/article/{{this.id}}">{{this.title}}</a> </h4>
          </div>
          {{#if user}}
          <div class="actions">
            <a href="/article/{{this.id}}/edit"><span class="fa fa-edit"></span></a> <a class="redtxt" href="/article/{{this.id}}/destroy" onclick="return confirm('Seguro quieres borrarlo?');"><span class="fa fa-trash"></span></a>
          </div>
          {{/if}}
        </div>
        <div class="index-content"><p>{{this.text}}</p></div>
        <ul class="centerize tips">
          {{#each this.category}}
            <li><a href="/blog/?filter={{this}}">{{this}}</a></li>
          {{else}}
            <li><a href="/blog/?filter={{this.category}}">{{this.category}}</a></li>
          {{/each}}
        </ul>
      </li>
      {{/each}}
      </ul>
      {{#if user}}
      <a href="/article/create" class="button medium">Crear un articulo nuevo</a>
      {{/if}}
    </div>
</div>

