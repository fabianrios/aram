      <a data-order="{{this.order}}" data-version="{{this.version}}" data-public_id="{{this.public_id}}"><img src="http://res.cloudinary.com/{{../cloudinary_account}}/image/upload/c_fill,h_107,w_200/v{{this.version}}/{{this.public_id}}" alt="" /></a>
