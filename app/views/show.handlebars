<div class="row">
  <div class="large-8 medium-8 columns">
    <a href="/blog" class="button tiny"><span class="fa fa-undo"></span> Volver</a>
    {{#if user}}
    <div class="actions">
      <a href="/article/{{article.id}}/edit"><span class="fa fa-edit"></span></a> <a class="redtxt" onclick="return confirm('Seguro quieres borrarlo?');" href="/article/{{article.id}}/destroy"><span class="fa fa-trash"></span></a>
    </div>
    {{/if}}
    <div class="content">{{{article.fulltext}}}</div>
  </div>
  <div class="large-4 medium-4 columns">
    <h4 class="bluetxt">Presupuesto Incognito</h4>
    <p><span class="currency">{{article.incognito}}</span> en adelante x persona</p>
    <h4 class="bluetxt">Presupuesto VIP</h4>
    <p><span class="currency">{{article.vip}}</span> a <span class="currency">{{article.incognito}}</span> x persona</p>
    <h4 class="bluetxt">Presupuesto Corporativo</h4>
    <p><span class="currency">{{article.corporate}}</span> a <span class="currency">{{article.vip}}</span> x persona</p>
    <div class="quick-contact">
      <div data-alert class="alert-box success round hidden" id="small-success">
        Su mensaje ha sido enviado correctamente
        <a href="#" class="close">&times;</a>
      </div>
          <form action="/email_country" method="post" class="inliner" id="email_country">
            <input type="hidden" name="country" value="{{article.title}}" />
            <input type="hidden" name="travel" value="menu_lateral" />
            <input type="email" name="email" class="unflashy" placeholder="Correo ElectrÃ³nico" required/>
            <i class="fa fa-envelope fix-inline"></i>
            <input type="submit" value="ENVIARME MAS INFO" class="button full success" />
          </form>
    </div>
    <br />
    <h4 class="bluetxt"><span id="increment">{{article.like}}</span> <span class="bluetxt fa fa-heart"></span> Me gusta</h4>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <div class="sub-social">
      <div id="shareIconsCountInside"></div>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <div id="comments">
      <span class="hidden" data-url="/article/{{article.id}}" data-id="{{article.id}}"></span>
      <div id="disqus_thread"></div>
      <br />
      <br />
      <br />
      <br />
      <br />
    </div>
  </div>
</div>
