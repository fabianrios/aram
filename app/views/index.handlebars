<div class="row">
  <div class="large-12 columns">
      <ul class="filter centerize">
        <li><a href="#todos">TODOS</a></li>
        <li><a href="#tips">TIPS</a></li>
        <li><a href="#viajes">VIAJES</a></li>
        <li><a href="#datos">DATOS</a></li>
      </ul>
      <br />
      <ul class="no-bullet posts">
      {{#each articles}}
      <li>
        <h4><a class="bluetxt" href="/article/{{this.id}}">{{this.title}}</a> </h4>
        <div class="actions right">
          <a href="article/{{this.id}}/edit"><span class="fa fa-edit"></span></a> <a class="redtxt" href="/article/{{this.id}}/destroy"><span class="fa fa-trash"></span></a>
        </div>
        <div class="content">{{{this.text}}}</div>
      </li>
      {{/each}}
      </ul>
      <a href="/article/create" class="button medium">Crear un articulo nuevo</a>
    </div>
</div>

