<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{{title }}</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/main.css">
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic' rel='stylesheet' type='text/css'>
  <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
  <script src="/scripts/zurb-foundation-5/js/foundation/foundation.js"></script>
  <script src="/scripts/ckeditor/ckeditor.js"></script>
  <script src="/scripts/autonumeric/autoNumeric.js" type="text/javascript"></script>
  <script src='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.js'></script>
  <link href='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.css' rel='stylesheet' />
  {{#if ENV_DEVELOPMENT}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>
<body>
  
  {{#query}} {{!-- login  public --}}
  
     <div class="main-body" style="background:white;">  
         {{#if error}}
           <div class="row">
             <div class="large-8 columns large-centered">
               <div data-alert class="alert-box alert round">
                 {{{error}}}
                 <a href="#" class="close">&times;</a>
               </div>
             </div>
           </div>
         {{/if}}
         {{#if user}}
            <h6 class="subheader">Bienvenido <a href="/profile" class="profile">{{user.username}}</a> <a href="/logout"><span class="fa fa-sign-out"></span></a></h6>
         {{/if}}
         {{{body}}}
       </div>
  
  {{else}}
  
     {{#if user}}
         
         <div class="sidebar-menu">
           <h6 class="subheader text-right">Bienvenido <a href="/profile" class="profile">{{user.username}}</a> <a href="/logout"><span class="fa fa-sign-out"></span></a></h6>
           <ul class="admin">
             <li><a href="/"><span class="fa fa-home fa-2x"></span> HOME</a></li>
             <li><a href="/country"><span class="fa fa-location fa-2x"></span> PAISES</a></li>
             <li><a href="/experiences"><span class="fa fa-news fa-2x"></span> BLOG</a></li>
             <li><a href="/contact"><span class="fa fa-user fa-2x"></span> INTERESADOS <span class="number">3</span></a></li>
             <li><a href="/contact"><span class="fa fa-phone fa-2x"></span> CONTACTO <span class="number">1</span></a></li>
           </ul>
         </div>
         <div class="admin-body">
           {{{body}}}
         </div>
         
     {{else}}
         
         <div class="main-body">
           {{#if background}}
            <div class="nav {{pageTitle}}" style="background-image:url(http://res.cloudinary.com/fabianrios/image/upload/c_fill,h_720,w_1920/{{article.cover}});">
           {{else}}
            <div class="nav">
           {{/if}}
             <a  href="/" class="logo"><img src="/img/{{logo}}" alt="" /></a>
             <ul class="navigation">
               <li><a href="/blog">BLOG</a></li>
               <li><a href="/experiences">EXPERIENCIAS</a></li>
               <li><a href="/contact">CONTACTO</a></li>
             </ul>
             <ul class="social">
               <li><a href=""><span class="fa fa-twitter fa-large"></span></a></li>
               <li><a href=""><span class="fa fa-facebook fa-large"></span></a></li>
               <li><a href=""><span class="fa fa-instagram fa-large"></span></a></li>
             </ul>
             {{#ifCond pageTitle "articles"}}
             <div class="br_after"></div>
             <div class="text-center">
               <div class="block">
                 <h2 class="upper">{{article.title}}</h2>
                 <ul class="centerize article-show">
                   {{#each article.category}}
                     <li><a href="/articles/#{{this}}">{{this}}</a></li>
                   {{else}}
                     <li><a href="/articles/#{{article.category}}">{{article.category}}</a></li>
                   {{/each}}
                 </ul>
               </div>
               <a id="like" data-id="{{article.id}}" class="whitetxt"><span class="fa fa-heart fa-2x"></span></a>
             </div>
             {{/ifCond}}
           </div>
           <div class="main-body">  
             {{#if error}}
               <div class="row">
                 <div class="large-8 columns large-centered">
                   <div data-alert class="alert-box alert round">
                     {{{error}}}
                     <a href="#" class="close">&times;</a>
                   </div>
                 </div>
               </div>
             {{/if}}
             {{{body}}}
           </div>
     
     {{/if}}
 

   
  {{/query}} {{!-- /login public --}}
  
  
  <div class="footer">
    <p>Copyright © 2016 Aram’s SAS. Todos los derechos reservados</p>
  </div>
  <script src="/js/ux.js"></script>
  </body>
</html>
